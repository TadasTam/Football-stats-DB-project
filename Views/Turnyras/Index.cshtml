@model IEnumerable<Org.Ktu.Isk.P175B602.Autonuoma.ViewModels.TurnyrasListVM>
@{
	ViewData["title"] = "Turnyrai";
}

<div class="main-content-header container-fluid d-flex d-row justify-content-between align-items-center p-2">
	<span class="title">@ViewData["title"]</span>
	<span class="actions">
		<a href="@Url.Action("Create")" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Sukurti naują</a>
	</span>
</div>

<div class="d-flex justify-content-center">
	<table class="entitylist table table-striped table-hover">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Pavadinimas)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Sezonas)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Salis)
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model) {
			<tr>
				<td>
					@Html.DisplayFor(model => item.Pavadinimas)
				</td>
				<td>
					@Html.DisplayFor(model => item.Sezonas)
				</td>
				<td>
					@Html.DisplayFor(model => item.Salis)
				</td>
				<td>
					<a href="@Url.Action("Edit", new { pavadinimas = item.Pavadinimas, sezonas = item.Sezonas, salis = item.Salis })" class="btn btn-primary"><i class="fa-solid fa-pen-to-square"></i> Redaguoti</a>
					<a href="@Url.Action("Delete", new { pavadinimas = item.Pavadinimas, sezonas = item.Sezonas, salis = item.Salis })" class="btn btn-danger"><i class="fa-solid fa-trash"></i> Šalinti</a>
				</td>
			</tr>
			}
		</tbody>
	</table>
</div>