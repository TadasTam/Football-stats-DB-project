@model Org.Ktu.Isk.P175B602.Autonuoma.ViewModels.TurnyrasEditVM

@{
	ViewData["title"] = "Turnyro sukūrimas";
}

<div class="main-content-header container-fluid d-flex d-row justify-content-between align-items-center">
	<span class="title">@ViewData["title"]</span>
	<span class="actions">
		<a href="@Url.Action("Index")" class="link-primary"><i class="fa-solid fa-angles-left"></i> Atgal į sarašą</a>
	</span>
</div>

<div class="container-fluid d-flex justify-content-center">
@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	@Html.ValidationSummary(true, "", new { @class = "text-danger" })

	<fieldset class="border rounded shadow p-2">
		<div class="form-group">
			@Html.LabelFor(m => m.Model.Pavadinimas, new { @class = "control-label" })
			@Html.EditorFor(m => m.Model.Pavadinimas, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(m => m.Model.Pavadinimas, "", new { @class = "text-danger" })
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Model.Sezonas, new { @class = "control-label" })
			@Html.EditorFor(m => m.Model.Sezonas, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(m => m.Model.Sezonas, "", new { @class = "text-danger" })
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Model.FkSalis, new { @class = "control-label" })
			@Html.DropDownListFor(m => m.Model.FkSalis, Model.Lists.Salys, "--------------", new { @class = "form-control" })
			@Html.ValidationMessageFor(m => m.Model.FkSalis, "", new { @class = "text-danger" })
		</div>
		
		<div class="form-group">
			@Html.LabelFor(m => m.Model.Rinktines, new { @class = "control-label" })
			<div class="checkbox">
				@Html.EditorFor(m => m.Model.Rinktines)
				@Html.ValidationMessageFor(m => m.Model.Rinktines, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Model.Klubai, new { @class = "control-label" })
			<div class="checkbox">
				@Html.EditorFor(m => m.Model.Klubai)
				@Html.ValidationMessageFor(m => m.Model.Klubai, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Model.Tipas, new { @class = "control-label" })
			@Html.DropDownListFor(m => m.Model.Tipas, Model.Lists.Tipai, "--------------", new { @class = "form-control" })
			@Html.ValidationMessageFor(m => m.Model.Tipas, "", new { @class = "text-danger" })
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Model.Keitimai, new { @class = "control-label" })
			@Html.DropDownListFor(m => m.Model.Keitimai, Model.Lists.KeitimaiL, "--------------", new { @class = "form-control" })
			@Html.ValidationMessageFor(m => m.Model.Keitimai, "", new { @class = "text-danger" })
		</div>
	</fieldset>

	<div class="container-fluid d-flex d-row justify-content-end">
		<button name="save" value="1" class="btn btn-success"><i class="fa-solid fa-floppy-disk"></i> Išsaugoti</button>
	</div>
}
</div>

<div class="main-content-footer container-fluid d-flex d-row justify-content-between align-items-center">
	<span class="title"></span>
	<span class="actions">
		<a href="@Url.Action("Index")" class="link-primary"><i class="fa-solid fa-angles-left"></i> Atgal į sarašą</a>
	</span>
</div>